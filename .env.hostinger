# إعدادات البيئة لـ Hostinger
# قم بنسخ هذا الملف إلى .env وتحديث القيم حسب معلومات الاستضافة

APP_NAME="نظام إدارة الموظفين"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Asia/Riyadh
APP_URL=https://yourdomain.com
APP_LOCALE=ar
APP_FALLBACK_LOCALE=ar
APP_FAKER_LOCALE=ar_SA

# سجلات الأخطاء
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
LOG_STDERR_FORMATTER=Monolog\Formatter\JsonFormatter

# إعدادات قاعدة البيانات - احصل عليها من لوحة تحكم Hostinger
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database_name_here
DB_USERNAME=your_database_user_here
DB_PASSWORD=your_database_password_here

# إعدادات البث
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

# إعدادات الذاكرة المؤقتة
CACHE_STORE=database
CACHE_PREFIX=newsarh_cache

# إعدادات الجلسة
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# إعدادات البريد الإلكتروني - Hostinger SMTP
MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=587
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# إعدادات Vite
VITE_APP_NAME="${APP_NAME}"

# إعدادات الأمان
# تأكد من تغيير هذه القيم
FILAMENT_ADMIN_PANEL_PATH=admin
FILAMENT_EMPLOYEE_PANEL_PATH=employee

# إعدادات إضافية للأداء
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# إعدادات النسخ الاحتياطي (اختياري)
BACKUP_DISK=local
BACKUP_NOTIFICATION_EMAIL=admin@yourdomain.com

# إعدادات تحميل الملفات
UPLOAD_MAX_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# المنطقة الزمنية
TZ=Asia/Riyadh
